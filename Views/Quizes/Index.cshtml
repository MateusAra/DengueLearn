@{
    ViewData["Title"] = "Quizes";
}

<div class="learn-container">
    <div class="container learn-container-content">
        <div class="row">
            <h2 class="text-black text-center mt-5 mb-5">Todos os jogos</h2>

            <div class="col-12 col-md-6 mb-4 d-flex flex-column justify-content-between align-items-center text-black text-center">
                <img src="~/mosquito.jpg" class="img-fluid" style="max-height: 300px;" alt="Mosquito da Dengue" />
                <a role="button" class="btn btn-secondary text-black title-quiz mt-3 flex-grow-1"
                   asp-route-id="1" asp-controller="Quizes" asp-action="GetQuiz">
                    Quiz sobre a prevenção da dengue.
                </a>
            </div>

            <div class="col-12 col-md-6 mb-4 d-flex flex-column justify-content-between align-items-center text-black text-center">
                <img src="~/sintomas.jpg" class="img-fluid" style="max-height: 300px;" alt="Sintomas da Dengue" />
                <a role="button" class="btn btn-secondary text-black title-quiz mt-3 flex-grow-1"
                   asp-route-id="2" asp-controller="Quizes" asp-action="GetQuiz">
                    Quiz sobre os sintomas e tratamento da Dengue.
                </a>
            </div>

        </div>
    </div>
</div>
