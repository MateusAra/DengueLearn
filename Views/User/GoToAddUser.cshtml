@model UserModel
@{
    Layout = "_LayoutLoggedOut";
    ViewData["Title"] = "Login";
}


<div class="container login-container">

    <div class="container text-center">
        <div class="row align-items-start">
            <div class="col">
                <div class="mb-5 text-start">
                    <img src="/signuplogo.jpeg" width="400" />
                </div>
                <div>
                    <h3 class="text-white text-start fw-bold">
                        Aprenda mais sobre a dengue...
                    </h3>
                    <div class="text-start text-white">
                        Conscientização dos usuários sobre a prevenção, sintomas e tratamento da doença. Por meio de conteúdos interativos e quizzes,
                        o sistema ensina práticas para evitar a proliferação do mosquito Aedes
                        aegypti, responsável pela transmissão, além de esclarecer mitos e fornecer informações essenciais para o combate à dengue.
                    </div>
                </div>
                <hr class="text-white" />
            </div>
            <div class="col">
                <div class="form-container" id="login-form">
                    <div class="text-dark fw-bold text-start mb-3">
                        <small class="text-start text-secondary mb-3">Bem vindo!</small>
                        <h3>Entre na sua conta.</h3>
                    </div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center" id="message-alert" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn btn-close" id="close-alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center" id="message-alert" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn btn-close close-alert" id="close-alert" aria-label="Close"></button>
                        </div>
                    }
                    <form class="login-form" asp-controller="User" asp-action="GoToAddUser" method="post">
                        <div class="text-start">
                            <div class="mb-3">
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Seu nome.">
                            </div>
                            @Html.ValidationMessageFor(x => x.Password)
                            <div class="mb-3">
                                <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
                            </div>
                            @Html.ValidationMessageFor(x => x.Email)
                            <div class="mb-3">
                                <input type="password" asp-for="Password" class="form-control" placeholder="Digite a senha">
                            </div>
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                        <button type="submit" class="btn btn-dark text-light mt-2 fw-bold">Criar conta</button>
                    </form>
                    <div class="mt-4">
                        <a asp-controller="Login" asp-action="Index" class="text-black text-decoration-none font-weight-bold">
                            <small>Você já possui conta? <strong>ENTRE AQUI.</strong></small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
